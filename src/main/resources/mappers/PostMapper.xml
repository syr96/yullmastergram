<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.yullmaster.gram.post.dao.PostDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `userLoginId`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{userLoginId}
			, #{imagePath}
			, #{content}
			, now()
			, now()
		)
	</insert>
	
	<select id="selectPostlist" resultType="com.yullmaster.gram.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `userLoginId`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC
	</select>
	
	<delete id="deletePost">
		DELETE FROM
			`post`
		WHERE
			`id` = #{id}
			AND `userId` = #{userId}
	</delete>
</mapper>